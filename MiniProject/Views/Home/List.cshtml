@model IEnumerable<MiniProject.Models.Request>

@{
    ViewData["Title"] = "List";
}


<div class="m-5">

    <div class="bg-success text-white m-5 p-4 ">
        Talep Listesi
    </div>

    <div class="table-responsive">

        <table class="table table-bordered table-striped m-5 ">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.Message</td>
                </tr>
                 }
                </tbody>
         </table>
       </div>
    </div>
  </div>